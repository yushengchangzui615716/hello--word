#include <stdio.h>                       switch语句允许嵌套使用 
int main()
{
	int day = 0;
	scanf("%d",&day); 
	switch(day)                   //括号内是几则运行case几        day必须是整形 
	{
	case 1:                       //day等于1      case后必须是整形 且为常量 
	    printf("星期一\n");
	    break;                   //跳出，不再向下运行 ，不遇break一直向下执行 
    case 2:
	    printf("星期二\n");
	    break;
    case 3:
	    printf("星期三\n");
	    break;
    case 4:
	    printf("星期四\n");
	    break;
    case 5:
	    printf("星期五\n");
	    break;
    case 6:
	    printf("星期六\n");
	    break;
    case 7:
	    printf("星期七\n");
	    break;
    default:                        //day>7(超出范围时)输出 
        printf("输入错误\n");
        break;
    
	}
	return 0;
} 
